<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - BookShop System</title>
  <link rel="stylesheet" href="~/css/site.css" />
  <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
  <header>
    <nav class="navbar navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <div class="">
          <a class="navbar-brand " asp-controller="Home" asp-action="Index">Book Shop</a>
          <a class="navbar-brand" asp-controller="Author" asp-action="Index">Authors</a>
        </div>

        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar"
                aria-controls="offcanvasDarkNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar"
             aria-labelledby="offcanvasDarkNavbarLabel">
          <div class="offcanvas-header">
            <h3 class="offcanvas-title mt-0 pt-0" id="offcanvasDarkNavbarLabel">Book Shop</h3>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item h4">
                <a class="nav-link active mb-1 py-1 " aria-current="page" asp-controller="Home" asp-action="Index">
                  <i class="bi bi-house-fill"></i> Home
                </a>
              </li>
              <li class="nav-item mb-2">
                <form class="d-flex mt-3" role="search">
                  <input class="form-control me-2" type="search" placeholder="Search Author" aria-label="Search">
                  <button class="btn btn-success" type="submit"><i class="bi bi-search"></i></button>
                </form>
              </li>

              <li class="nav-item text-center ">
                <h4 class="mt-1 mb-0 py-0"><i class="bi bi-sliders"></i> Manage</h4>
              </li>
              <li>
                <hr class="divider">
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                   aria-expanded="false">
                  Authors
                </a>
                <ul class="dropdown-menu dropdown-menu-dark">
                  <li><a class="dropdown-item" asp-controller="Author" asp-action="Create">Create</a></li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item" asp-controller="Author" asp-action="Edit">Edit</a></li>
                </ul>
              </li>
              <li class="nav-item text-center">
                <h4 class="mt-1 mb-0 py-0">Filter</h4>
              </li>
              <li>
                <hr class="divider">
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Author Books</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </header>
  <div class="container mt-l">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted mb-2">
    <div class="container row pt-3 mx-auto">
      <div class='col-12 gitHub'>
        <h6 class='text-center'>
          &copy; 2022 - Made with ❤️ by
          <a class='text-decoration-none'
             href='https://github.com/LopezAG17'
             target='_blank'>
            <i class='bi bi-github h6'></i>
          </a>
        </h6>
      </div>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @RenderSection("Scripts", required: false)
</body>

</html>
