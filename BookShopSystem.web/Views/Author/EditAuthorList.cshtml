@model IEnumerable<BookShopSystem.web.Models.AuthorModel>

@{
  ViewData["Title"] = "Edit Author ";
}

<h1>Edit Ahuros</h1>

<section class="row">
  <p>
    <a class='btn btn-primary float-end' asp-action="Create">Create New</a>
  </p>
  @foreach (var item in Model) {
    <div class="card mb-3 col ms-3" style="min-width: 22rem; max-width: 22rem; ">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="https://t3.ftcdn.net/jpg/00/64/67/80/240_F_64678017_zUpiZFjj04cnLri7oADnyMH0XBYyQghG.jpg" class="img-fluid rounded-start imageResponsive pb-2 pt-0" alt="AuthorImage">
        </div>
        <div class="col-md-8  mb-2">
          <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Email)</p>
            <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.Biography)</small></p>
            <div class='btn btn-info float-start'>
              @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new{ style="text-decoration: none; color:black;" })
            </div>
            <input type="hidden" name="id" value="@item.Id" />
            <form asp-action="Delete">
              <input type="submit" value="Delete" class="btn btn-danger float-end" />
            </form>
          </div>
        </div>
      </div>
    </div>
  }
</section>
